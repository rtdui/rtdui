{
	"name": "@rtdui/monorepo",
	"private": true,
	"workspaces": ["packages/*", "docs-site"],
	"version": "4.10.5",
	"description": "rtdui Components Monorepo",
	"type": "module",
	"repository": "https://github.com/rtdui/rtdui.git",
	"author": "fuzhongwei <jackyleefzw@163.com>",
	"license": "MIT",
	"scripts": {
		"dev": "npm run docs:docgen && cd docs && npm run dev",
		"plop": "bun scripts/plop/index.ts",
		"sync-branches": "bun scripts/sync-branches.sh",
		"outdated": "bun outdated --filter \"*\"",
		"ncu": "bun x npm-check-updates@latest --packageManager bun -ws",
		"changelog": "bun scripts/changelog.ts",
		"check": "bun x biome check",
		"check:fix": "bun x biome check --write --unsafe",
		"syncpack:check": "syncpack list-mismatches",
		"syncpack:fix": "syncpack fix-mismatches",
		"typecheck": "tsc --noEmit && npm run docs:typecheck",
		"build": "npm run clean:build && bun scripts/build/index.ts all",
		"clean": "npm run clean:build && npm run clean:docs",
		"clean:build": "bun x rimraf --glob ./packages/*/{esm,cjs,lib,node_modules} ./packages/*/styles.css ./packages/*/styles.layer.css ./packages/**/*.tsbuildinfo",
		"clean:docs": "bun x rimraf --glob ./docs/app/.docgen/*",
		"clean:tsbuildinfo": "bun x rimraf --glob ./packages/**/*.tsbuildinfo",
		"clean:npm": "bun x rimraf --glob ./**/node_modules",
		"clean:types": "bun x rimraf --glob ./packages/hooks/**/*.d.ts",
		"test": "bun test",
		"docs:docgen": "bun scripts/docgen/index.ts && bun scripts/codegen/index.ts",
		"release:check": "npm run clean:build && npm run check && bun scripts/release/index.ts",
		"release": "npm run clean:build && bun scripts/release/index.ts",
		"release:alpha:patch": "npm run release patch --stage alpha --tag next",
		"release:alpha:minor": "npm run release minor --stage alpha --tag next",
		"release:alpha:major": "npm run release major --stage alpha --tag next",
		"release:patch": "npm run release patch",
		"release:minor": "npm run release minor",
		"release:major": "npm run release major"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@mdx-js/rollup": "^3.0.0",
		"@rollup/plugin-alias": "^5.0.1",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-json": "^6.0.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-replace": "^5.0.4",
		"@tailwindcss/typography": "^0.5.10",
		"@types/fs-extra": "^11.0.2",
		"@types/katex": "^0.16.7",
		"@types/react": "^18.2.47",
		"@types/react-dom": "^18.2.18",
		"@types/signale": "^1.4.7",
		"@types/yargs": "^17.0.29",
		"autoprefixer": "^10.4.19",
		"chalk": "^5.3.0",
		"cross-env": "^7.0.3",
		"cssnano": "^6.0.1",
		"daisyui": "^4.12.1",
		"esbuild": "^0.19.11",
		"execa": "^8.0.1",
		"fast-glob": "^3.2.5",
		"fs-extra": "^11.2.0",
		"gh-pages": "^6.1.1",
		"prettier": "^3.0.3",
		"react-docgen-typescript": "2.1.0",
		"rehype-katex": "^7.0.0",
		"rehype-prism-plus": "^2.0.0",
		"rehype-slug": "^6.0.0",
		"remark-breaks": "^4.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-math": "^6.0.0",
		"remark-toc": "^9.0.0",
		"rollup": "^4.1.4",
		"rollup-plugin-banner2": "^1.3.1",
		"rollup-plugin-esbuild": "^6.1.0",
		"rollup-plugin-node-externals": "^6.1.2",
		"rollup-plugin-postcss": "^4.0.2",
		"signale": "^1.4.0",
		"simple-git": "^3.22.0",
		"syncpack": "^12.3.0",
		"tailwindcss": "^3.4.4",
		"type-fest": "^4.8.3",
		"typescript": "^5.6.3",
		"version-next": "^1.0.2",
		"yargs": "^17.7.2"
	}
}
